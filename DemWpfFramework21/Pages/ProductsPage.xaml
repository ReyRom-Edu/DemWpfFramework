<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemWpfFramework21.Pages"
      xmlns:Models="clr-namespace:DemWpfFramework21.Models" x:Class="DemWpfFramework21.Pages.ProductsPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Товары" Loaded="Page_Loaded">

    <Page.Resources>
        <CollectionViewSource x:Key="productViewSource" d:DesignSource="{d:DesignInstance {x:Type Models:Product}}"/>

        <Style x:Key="PriceTextStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasDiscount}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0"  HorizontalAlignment="Right" Margin="5">
            <TextBlock x:Name="NameLabel" Text=""/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" x:Name="FilterPanel">
            <TextBox x:Name="SearchBox" Width="300" TextChanged="FilterChanged"/>
            <ComboBox x:Name="FilterBox" Width="150" SelectionChanged="FilterChanged"/>
            <ComboBox x:Name="SortBox" Width="150" SelectionChanged="FilterChanged">
                <ComboBoxItem Content="Без сортировки"/>
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
        </StackPanel>

        <ListView Grid.Row="2" x:Name="productListView" ItemsSource="{Binding Source={StaticResource productViewSource}}" SelectionMode="Single" MouseDoubleClick="ProductListView_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Control.HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Control.VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="#7FFF00"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBigDiscount}" Value="True">
                            <Setter Property="Background" Value="#2E8B57"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Amount}" Value="0">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="m:Product">
                    <Border BorderBrush="Black" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                                <Image Source="{Binding PhotoPath}" Stretch="Uniform"/>
                            </Border>

                            <Border Grid.Column="1" Margin="0,10" BorderBrush="Black" BorderThickness="1">
                                <StackPanel Margin="5">
                                    <TextBlock FontWeight="Bold" FontSize="14">
                                <Run Text="{Binding Category.Name}"/>
                                <Run Text=" | "/>
                                <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                    <TextBlock Text="Описание товара:"/>
                                    <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap"/>
                                    <TextBlock>
                                <Run Text="Производитель: "/>
                                <Run Text="{Binding Manufacturer.Name}"/>
                                    </TextBlock>
                                    <TextBlock>
                                <Run Text="Поставщик: "/>
                                <Run Text="{Binding Supplier.Name}"/>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена: "/>
                                        <TextBlock Text="{Binding Price, StringFormat=C}" 
                                               Foreground="Red" 
                                               TextDecorations="Strikethrough"
                                               Margin="0,0,5,0"
                                               Style="{StaticResource PriceTextStyle}"/>
                                        <TextBlock Text="{Binding DiscountedPrice, StringFormat=C, Mode=OneWay}"/>
                                    </StackPanel>

                                    <TextBlock>
                                <Run Text="Единица измерения: "/>
                                <Run Text="{Binding Unit}"/>
                                    </TextBlock>
                                    <TextBlock>
                                <Run Text="Количество на складе: "/>
                                <Run Text="{Binding Amount}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Margin="10">
                                <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center">
                                    <TextBlock FontSize="16">
                                <Run Text="{Binding Discount}"/>
                                <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    


</Page>
